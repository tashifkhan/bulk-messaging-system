{
	"name": "electron",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"main": "src/electron/main.js",
	"scripts": {
		"dev:react": "vite",
		"dev:electron": "cross-env NODE_ENV=development electron .",
		"dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
		"build": "vite build",
		"prod": "npm run build && cross-env NODE_ENV=production electron .",
		"start": "npm run build && electron .",
		"dist:mac": "npm run build && electron-builder --mac --arm64",
		"dist:win": "npm run build && electron-builder --win --x64",
		"dist:linux": "npm run build && electron-builder --linux --x64",
		"lint": "eslint .",
		"preview": "vite preview"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.10",
		"csv-parser": "^3.2.0",
		"electron-store": "^10.1.0",
		"googleapis": "^150.0.1",
		"nodemailer": "^7.0.3",
		"pyodide": "^0.27.5",
		"qrcode-terminal": "^0.12.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwindcss": "^4.1.10",
		"whatsapp-web.js": "^1.30.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"electron": "^35.1.4",
		"electron-builder": "^26.0.12",
		"eslint": "^9.21.0",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^15.15.0",
		"vite": "^6.2.0",
		"wait-on": "^8.0.3"
	}
}
